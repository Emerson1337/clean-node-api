{
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "indent": [
        "error",
        "tab",
        {
            "SwitchCase": 1,
            "ignoredNodes": ["ConditionalExpression"]
        }
    ],
    "linebreak-style": 0,
    "quotes": 0,
    "semi": [
        "error",
        "always"
    ]
  }
}